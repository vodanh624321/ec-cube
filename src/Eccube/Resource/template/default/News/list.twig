{% extends 'default_frame.twig' %}

{% block javascript %}
{% endblock javascript %}

{% block main %}
<div class="inner">
    <p class="newsTit">プレスリリース</p>
    <p class="itemList"><span class="total">{{ pagination.totalItemCount }}</span>件中　<span class="first">{{ pagination.paginationdata.firstItemNumber }}</span>件目～<span class="last">{{ pagination.paginationdata.lastItemNumber }}</span>件目を表示</p>
    <div class="newsList">
        {% for News in pagination %}
        <dl class="clearfix">
            <dt>{{ News.date|date("Y.m.d") }}
                {% if News.new == true %}<span class="newSP">NEW</span>{% endif %}
            </dt>
            <dd><a href="{{ url('news_detail', {'id': News.id}) }}" {% if News.new == true %}class="new"{% endif %}>{{ News.title }}</a></dd>
        </dl>
        {% endfor %}
    </div>

    {% if pagination.totalItemCount > 0 %}
        {% include "pagination.twig" with { 'pages' : pagination.paginationData } %}
    {% endif %}
</div>
{% endblock %}
