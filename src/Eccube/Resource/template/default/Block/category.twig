{% macro tree(Category, key = null, requestId = null) %}
    {% set key = key|default('') %}
    {% set reqestId = reqestId|default('') %}

    {% set show = false %}
    {% if Category.id == requestId %}
        {% set show = true %}
    {% elseif Category.children|length > 0 %}
        {% for ChildCategory in Category.children %}
            {% if requestId == ChildCategory.id %}
                {% set show = true %}
            {% elseif ChildCategory.children|length > 0 %}
                {% for ChildCategory2 in ChildCategory.children %}
                    {% if requestId == ChildCategory2.id %}
                        {% set show = true %}
                    {% endif %}
                {% endfor %}
            {% endif %}
        {% endfor %}
    {% endif %}

    {% set isParent = false %}
    {% set paddingLeft = false %}
    {% if Category.children|length > 0 %}
        {% set isParent = true %}
    {% elseif Category.level == 2 %}
        {% set paddingLeft = true %}
    {% endif %}
    <li>
        <a href="{{ url('product_list') }}?category_id={{ Category.id }}" class="{% if key is not empty %}bg0{{ key }}{% endif %} {% if isParent == true %}parents{% endif %}" {% if paddingLeft %}style="background: #e0e9f1;padding-left: 16px;"{% endif %}>
            {{ Category.name }}
            <span> </span>
        </a>
        {% if Category.children|length > 0 %}
            <ul class="subNavi {% if show == true %}block{% endif %}">
                {% for ChildCategory in Category.children %}
                    {{ _self.tree(ChildCategory, null, requestId) }}
                {% endfor %}
            </ul>
        {% endif %}
    </li>
{% endmacro %}
{% set requestId = app.request.get('category_id') %}
<div id="lNavi">
    <ul class="child-1">
        {% for key,Category in Categories %}
            {{ _self.tree(Category, key+1, requestId) }}
        {% endfor %}
    </ul>
</div>