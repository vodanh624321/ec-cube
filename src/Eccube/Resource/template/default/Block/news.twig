{% block stylesheet %}
<style type="text/css">
    .newslist dl dt span.news_title:hover {
        text-decoration: none !important;
        color: #1b1b1b !important;
        font-weight: bold !important;
    }
    .newslist dl dt span.news_title {
        text-decoration: underline !important;
        color: #2d6eab !important;
        font-weight: bold !important;
    }
</style>
{% endblock %}
<div class="homeNews news_contents">
    <div id="news_area" style="background:none;">
        <h2 class="hd02">お知らせ</h2>
        <div class="accordion">
        <div class="newslist">
            {% for News in NewsList %}
            <dl style="border-bottom: 1px solid #eee; border-top:none;">
                <dt style="padding-left: 0px;">
                    <span class="date">{{ News.date|date("Y.m.d") }}</span>
                    <span class="news_title">{{ News.title }}</span>
                    {% if News.comment or News.url %}
                        <span class="angle-circle"><svg class="cb cb-angle-down"><use xlink:href="#cb-angle-down" /></svg></span>
                    {% endif %}
                </dt>
                <dd>
                {% if News.comment or News.url %}
                    <dd>{{ News.comment|raw|nl2br}}
                        {% if News.url %}<br>
                        <a href="{{ News.url }}" {% if News.link_method == '1' %}target="_blank"{% endif %}>
                        詳しくはこちら
                        </a>{% endif %}
                    </dd>
                    {% endif %}
            </dl>
            {% endfor %}
        </div>
        </div>
    </div>
</div>
