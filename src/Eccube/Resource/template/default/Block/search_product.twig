<div id="headerSearch">
    <form method="get" id="searchform" action="{{ path('product_list') }}">
        <input type="hidden" name="s" value="">
        {{ form_widget(form.name, {'attr': { 'placeholder' : "キーワードを入力", 'class':'inputSearch' }} ) }}
        <button type="submit" class="inputSubmit"><svg class="cb cb-search"><use xlink:href="#cb-search" /></svg></button>
        <div class="extra-form" style="margin: 0;">
            {% for f in form.getIterator %}
                {% if f.vars.name matches '[^plg*]' %}
                    {{ form_label(f) }}
                    {{ form_widget(f) }}
                    {{ form_errors(f) }}
                {% endif %}
            {% endfor %}
        </div>
    </form>
</div>
