
{% block javascript %}
<script type="text/javascript">
	var css=document.createElement("link");
	css.setAttribute("rel","stylesheet");
	css.setAttribute("type","text/css");
	css.setAttribute("href","{{ app.config.plugin_urlpath }}/Shiro8ChildCategory3/css/child_category.css");
	document.getElementsByTagName("head")[0].appendChild(css);

$(function () {
    $(document).on('click','p#cat_btn',function(){
    	$("#cat_child ul.child_list").slideToggle();
		if ($('#cat_open_or_close_btn').hasClass('refrect-ud')) {
			$('#cat_open_or_close_btn').removeClass('refrect-ud');
		} else {
			$('#cat_open_or_close_btn').addClass('refrect-ud');
		}
    	// $("#cat_close_btn").toggle();
    	// $("#cat_open_btn").toggle();
	});
});

</script>
<style>
.refrect-ud{
  -webkit-transform: scaleY(-1);
  -o-transform: scaleY(-1);
  -moz-transform: scaleY(-1);
  transform: scaleY(-1);
  filter: FlipV;
  -ms-filter: "FlipV";
}
</style>
{% endblock %}

{% if ChildCategoryCount == '0' %}
<style>
@media screen and (min-width:767px) {

  .listArea1 {
    margin-bottom: 30px !important;
  }

}
@media screen and (max-width:768px) {

  .listArea1 {
    margin-bottom: -30px !important;
  }
}
</style>
{% endif %}

{% if app.request.query.get("tag_id") > 0 %}

{% else %}

<div id="s8_Child_category">
	<div class="row">
		<div class="parent_title listArea1 ">
			<h1>{{ CategoryName }}</h1>
		</div><!--/ parent_title -->
		{% if Categories|length > 0 %}
		<div id="cat_child" class="child_body open">
			<ul class="child_list">
				{% for ChildCategory in Categories %}
					{% if ChildCategory.Children|length > 0 %}
						<li class="col-xs-6 col-sm-3 hasChildren"><a href="{{url('product_list',{'category_id': ChildCategory.id})}}">{{ ChildCategory.name}}</a></li>
					{% else %}
						<li class="col-xs-6 col-sm-3"><a href="{{url('product_list',{'category_id': ChildCategory.id})}}">{{ ChildCategory.name}}</a></li>
					{% endif %}
				{% endfor %}
			</ul>
			<p id="cat_btn" class="sp">
				<a href="#" class="cat_close">
					<!-- <img id="cat_close_btn" src="{{ app.config.plugin_urlpath }}/Shiro8ChildCategory3/img/arrow-up.svg" alt="閉じる"> -->
					<!-- <img id="cat_open_btn" src="{{ app.config.plugin_urlpath }}/Shiro8ChildCategory3/img/arrow-down.svg" alt="開く"> -->
					<img id="cat_open_or_close_btn" src="{{ app.config.plugin_urlpath }}/Shiro8ChildCategory3/img/arrow-up.svg">
				</a>
			</p>
		</div><!--/ child_body -->
		{% endif %}
	</div>
</div><!--#s8_Child_category End -->

{% endif %}
