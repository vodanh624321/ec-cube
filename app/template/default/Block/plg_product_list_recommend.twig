{% if product_list_recommend %}
    <!-- ▼item_list▼ -->
    <div class="productSide visiblePC">
        <div class="prodSideMain">
            <p class="prodSideTit prodSideBg02">閲覧履歴からのおすすめ商品</p>
            <ul class="prodSideList clearfix">
                {% for arrProduct in product_list_recommend %}
                    {% set Product = arrProduct[0] %}
                    <li>
                        <div class="prodSideBox biggerlink">
                            <p class="img"><img src="{{ app.config.image_save_urlpath }}/{{ Product.mainFileName|no_image_product }}" alt=""></p>
                            <p class="tit"><a href="{{ url('product_detail', {'id': Product.id}) }}">{{ Product.name }}</a></p>
                            <p class="price"><span class="txt">{{ Product.getPrice02Min|price }}～</span></p>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <!-- ▲item_list▲ -->
{% endif %}